@model IEnumerable<BookingHotel.Models.EmployeeSchedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Schedules</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Task Name</th>
                <th>Employee</th>
                <th>Slot</th>
                <th>Shift Start Time</th>
                <th>Shift End Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Taskname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Employee.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Slot)</td>
                    <td>@FormatDateTime(item.ShiftStartTime)</td>
                    <td>@FormatDateTime(item.ShiftEndTime)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ScheduleID" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ScheduleID" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ScheduleID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-controller="Employee" asp-action="Index">Back to List</a>
</div>
@functions {
    public static string FormatDateTime(DateTime? dateTime)
    {
        return dateTime?.ToString("dd/MM/yyyy");
    }
}
