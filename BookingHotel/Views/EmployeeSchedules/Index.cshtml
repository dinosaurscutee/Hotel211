@model IEnumerable<BookingHotel.Models.EmployeeSchedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Taskname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftEndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Taskname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slot)
                </td>
                <td>
                    @FormatDateTime(item.ShiftStartTime)
                </td>
                <td>
                    @FormatDateTime(item.ShiftEndTime)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ScheduleID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ScheduleID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ScheduleID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@functions {
    public static string FormatDateTime(DateTime? dateTime)
    {
        return dateTime?.ToString("dd/MM/yyyy");
    }
}
