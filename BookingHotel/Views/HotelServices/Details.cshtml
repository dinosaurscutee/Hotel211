@model BookingHotel.Models.HotelService

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>Details</h1>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="card-title">Hotel Service</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Service Name:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.ServiceName)</dd>
                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                        <dt class="col-sm-3">Price:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Price)</dd>
                        <dt class="col-sm-3">Rating:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Rating)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Service Image" class="img-fluid">
                    }
                    else
                    {
                        <p>No image available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ServiceID">Edit</a>
        <a class="btn btn-secondary ml-2" asp-action="Index">Back to List</a>
    </div>
</div>

<style>
    .card {
        margin-top: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    dt {
        font-weight: bold;
    }

    dd {
        border-bottom: 1px solid #ccc;
        padding-bottom: 5px;
        margin-bottom: 10px;
    }
</style>
