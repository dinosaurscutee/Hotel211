

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Confirm Email Failed</h2>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <p>The email confirmation link is invalid or expired. Please try again.</p>
        </div>
    </div>
</div>
