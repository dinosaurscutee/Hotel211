@model BookingHotel.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                        <dt class="col-sm-4">First Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-4">Last Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Phone Number:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <dt class="col-sm-4">Role:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Role.RoleName)</dd>

                        <dt class="col-sm-4">Email Confirmation Token:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailConfirmationToken)</dd>

                        <dt class="col-sm-4">Reset Password Token:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ResetPasswordToken)</dd>

                        <dt class="col-sm-4">Token Created At:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TokenCreatedAt)</dd>

                        <dt class="col-sm-4">Is Email Confirmed:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IsEmailConfirmed)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-center">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.UserID">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>

<style>
    dl.row dt,
    dl.row dd {
        border-bottom: 1px solid #ccc;
        padding: 5px 0;
        margin: 0;
    }
</style>
